<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <header>
            <%- include("./partials/nav.ejs") %>
        </header>

        <div class="container mt-5">
            <!-- Brojač pitanja i tajmer -->
            <div class="row mb-3">
                <div class="col-6 text-start">
                    <div id="question-count" class="font-weight-bold fs-5">
                        <span id="current-question">1</span> / <span id="total-questions">3</span>
                    </div>
                </div>
                <div class="col-6 text-end">
                    <div id="timer" class="fs-5">00:00</div>
                </div>
            </div>

            <!-- Kartice -->
            <div class="d-flex justify-content-center position-relative overflow-hidden" id="card-container" style="height: 300px;">
                <div class="card question-card active-card" id="card1">
                    <div class="card-body">
                        <h5 class="card-title">Pitanje 1:</h5>
                        <p class="card-text">Koji je glavni grad Francuske?</p>
                    </div>
                </div>
                <div class="card question-card hidden-right" id="card2">
                    <div class="card-body">
                        <h5 class="card-title">Pitanje 2:</h5>
                        <p class="card-text">Koji je glavni grad Italije?</p>
                    </div>
                </div>
                <div class="card question-card hidden-right" id="card3">
                    <div class="card-body">
                        <h5 class="card-title">Pitanje 3:</h5>
                        <p class="card-text">Koji je glavni grad Španije?</p>
                    </div>
                </div>
            </div>

            <!-- Navigacija i završetak -->
            <div class="row mt-3">
                <div class="col-6 text-start">
                    <button id="prev-button" class="btn btn-secondary w-50" onclick="previousQuestion()" disabled>←</button>
                </div>
                <div class="col-6 text-end">
                    <button id="next-button" class="btn btn-secondary w-50" onclick="nextQuestion()">→</button>
                    <button id="finish-button" class="btn btn-success w-50 d-none" onclick="finishQuiz()">Završi kviz</button>
                </div>
            </div>
        </div>

        <!-- Stilovi -->
        <style>
            .question-card {
                width: 300px;
                height: 200px;
                position: absolute;
                transition: transform 0.5s ease, opacity 0.5s ease;
                opacity: 0;
            }

            .hidden-left {
                transform: translateX(-100%);
                opacity: 0;
            }

            .hidden-right {
                transform: translateX(100%);
                opacity: 0;
            }

            .active-card {
                transform: translateX(0);
                opacity: 1;
            }
        </style>

        <!-- JavaScript -->
        <script>
            let currentCardIndex = 0;
            const totalQuestions = 3;
            let timerInterval;
            let secondsElapsed = 0;

            // Pokreće tajmer
            function startTimer() {
                timerInterval = setInterval(() => {
                    secondsElapsed++;
                    const minutes = Math.floor(secondsElapsed / 60);
                    const seconds = secondsElapsed % 60;
                    document.getElementById("timer").textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
                }, 1000);
            }

            // Zaustavlja tajmer
            function stopTimer() {
                clearInterval(timerInterval);
            }

            // Ažurira prikaz kartica
            function updateCards() {
                const cards = document.querySelectorAll(".question-card");
                cards.forEach((card, index) => {
                    if (index < currentCardIndex) {
                        card.classList.add("hidden-left");
                        card.classList.remove("hidden-right", "active-card");
                    } else if (index > currentCardIndex) {
                        card.classList.add("hidden-right");
                        card.classList.remove("hidden-left", "active-card");
                    } else {
                        card.classList.add("active-card");
                        card.classList.remove("hidden-left", "hidden-right");
                    }
                });

                // Ažuriranje dugmadi
                document.getElementById("prev-button").disabled = currentCardIndex === 0;
                document.getElementById("next-button").classList.toggle("d-none", currentCardIndex === totalQuestions - 1);
                document.getElementById("finish-button").classList.toggle("d-none", currentCardIndex !== totalQuestions - 1);

                // Ažuriranje broja pitanja
                document.getElementById("current-question").textContent = currentCardIndex + 1;
            }

            // Sledeće pitanje
            function nextQuestion() {
                if (currentCardIndex < totalQuestions - 1) {
                    currentCardIndex++;
                    updateCards();
                }
            }

            // Prethodno pitanje
            function previousQuestion() {
                if (currentCardIndex > 0) {
                    currentCardIndex--;
                    updateCards();
                }
            }

            // Završava kviz
            function finishQuiz() {
                stopTimer();
                alert(`Kviz završen! Ukupno vreme: ${document.getElementById("timer").textContent}`);
            }

            // Inicijalizacija
            startTimer();
            updateCards();
        </script>
    </body>
</html>
